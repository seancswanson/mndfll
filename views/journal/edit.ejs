<%- include ../partials/postlogin-nav %>
<%- include ../partials/quote %>


<div class="div--container__create container z-depth-3 fadein">
  <div class="section">
    <div class="row">
      <div class="col s11">
        <span class="span--journal__title">Edit this entry
        </span>
      </div>
    </div>
    <div class="container">
      <div class="section">
        <form id="form--journal__new" action="/journal/<%= post.id %>" class="col s12">

            <div class="row">
              <div class="input-field col s12">
                <input id="" name="" type="text">
                <label for="">Where are you?</label>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <input id="" name="" type="text">
                <label for="">How do you feel today?</label>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <input id="" name="" type="text">
                <label for="">What is your intention or goal?</label>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <label for="">3 things needed to be done today:</label>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s9 offset-s1">
                <input id="" name="" type="text">
                <label for="">1.</label>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s9 offset-s1">
                <input id="" name="" type="text">
                <label for="">2.</label>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s9 offset-s1">
                <input id="" name="" type="text">
                <label for="">3.</label>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <label for="">Any additional musings that come to mind...</label>
              </div>
            </div>
            
            <div class="row">
              <div class="input-field col s12">
                <textarea class="textarea--journal__musings" id="" name="" type="text" placeholder="...perhaps a poem or a limerick?"></textarea>
              </div>
            </div>

            <div class="row">
              <div class="col s9">
                <a id="a--input__submit" class="btn-large btn--create waves-effect waves-plum waves-ripple"><i class="fa fa-plus-circle i--circle__create" aria-hidden="true"></i>Post</a>
              </div>
            </div>

          </form>
      </div>
    </div>
  </div>
</div>