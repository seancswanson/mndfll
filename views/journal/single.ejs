<%- include ../partials/postlogin-nav %>
<%- include ../partials/alert %>
<%- include ../partials/quote %>

  <% var dateString = post.dataValues.createdAt; %>
  <% var dateObj = new Date(dateString); %>
  <% var momentObj = moment(dateObj); %>
  <% var momentString = momentObj.format('MMM[.] Do[,] [\']YY') %>
  <% var postId = post.dataValues.id; %>
  <% var postLocation = post.dataValues.location %>
  <% var postMood = post.dataValues.mood %>
  <% var postGoal = post.dataValues.goal %>
  <% var postNotes = post.dataValues.notes %>
  <% var postP1 = post.dataValues.priority1 %>
  <% var postP2 = post.dataValues.priority2 %>
  <% var postP3 = post.dataValues.priority3 %>

<div class="div--container__create container z-depth-3 fadein div--alpha">
  <div class="section">
    <div class="row">
      <div class="col s11">
        <span class="span--single__title"> <%= momentString %>
        </span>
      </div>
    </div>
    <div class="container">
      <div class="section">

            <div class="row div--single__row">
              <div class="col s12">
                <p class="p--single__label">Where were you?</p>
                <p class="p--single__body"><%= postLocation %></p>
              </div>
            </div>

            <div class="row div--single__row">
              <div class="div--single col s12">
                <p class="p--single__label">How did you feel this day?</p>
                <p class="p--single__body"><%= postMood %></p>
              </div>
            </div>

            <div class="row div--single__row">
              <div class="div--single col s12">
                <p class="p--single__label">What was your intention or goal?</p>
                <p class="p--single__body"><%= postGoal %></p>
              </div>
            </div>

            <div class="row div--single__row">
              <div class="div--single col s12">
                <p class="p--single__label">3 things you are grateful for:</p>
                <p class="p--single__label  p--single__plabel1">1.</p>
                <p class=" p--single__priority p--single__p1"><%= postP1 %></p>
                <p class="p--single__label p--single__plabel2">2.</p>
                <p class=" p--single__priority p--single__p2"><%= postP2 %></p>
                <p class="p--single__label p--single__plabel3">3.</p>
                <p class=" p--single__priority p--single__p3"><%= postP3 %></p>
              </div>
            </div>

            <div class="row div--single__row div--single__textarea">
              <div class="div--single col s12">
                <p class="p--single__label">Any additional musings that came to mind...</p>
                <p class="p--single__body"><%= postNotes %></p>
              </div>
            </div>


            <div class="row">
              <div class="col s4">
                <a href="/journal/all" class="btn btn-large waves-effect waves-plum waves-ripple"><i class="fa fa-long-arrow-left" aria-hidden="true"></i></a>
              </div>

              <div class="col s4">
                <a href="/journal/edit/<%= post.id %>" class="btn btn-large waves-effect waves-plum waves-ripple"><i class="fa fa-pencil" aria-hidden="true"></i></a>
              </div>

              <div class="col s4">
                <form class="button--delete" action="./<%= post.id %>">
                <button class="btn btn-large waves-effect waves-red waves-ripple" type="submit" value=""><i class="fa fa-trash" aria-hidden="true"></i></button>
                </form>
              </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include ../partials/documentEnd %>