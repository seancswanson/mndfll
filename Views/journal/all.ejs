<%- include ../partials/postlogin-nav %>
<%- include ../partials/quote %>

<div class="div--container__journal container z-depth-3 fadein">
  <div class="section">
    <div class="row">
      <div class="col s8">
        <span class="span--journal__title"> Your Entries
        </span>
      </div>
      <div class="col s3">
        <a href="/journal/new" class="gray-text"><i class="fa fa-pencil i--journal__new waves-effect waves-new waves-ripple" aria-hidden="true"></i>         
        <span class="hide-on-med-and-down span--journal__new">add entry</span>
        </a>
      </div>
    </div>
    <div class="row">
      <div class="col s8">
        <span class="span--journal__subtitle">
          click on an entry to view details
        </span>
      </div>
    </div>
  </div>
  <div class="section">

    <table class="striped bordered centered">

      <thead class="columns--journal">
        <th>Date</th>
        <th>Mood + Notes</th>
      </thead>

      <tbody class="rows--journal">

        <% posts.forEach(function(posts){ %>

        <tr class="rows--journal__hover">
          <td><a href="/journal/view/<%= posts.dataValues.id %>"><%= moment((toString(posts.dataValues.createdAt)).value).format("MMM Do YY"); %></a></td>
          <td><a href="/journal/view/<%= posts.dataValues.id %>"><%= posts.dataValues.mood + " + " + posts.dataValues.notes %></a></td>
        </tr>

         <%})%>
      </tbody>      
    </table>

  </div>
</div>